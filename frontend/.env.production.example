# =====================================
# PRODUCTION FRONTEND CONFIGURATION
# =====================================
# Copy this file to .env when deploying to production

# Production Configuration
VITE_APP_MODE=production

# Backend API URLs (update with your deployed backend URL)
VITE_API_BASE_URL=https://chatify-67td.onrender.com/api
VITE_SOCKET_URL=https://chatify-67td.onrender.com

# App Configuration
VITE_APP_NAME=Chatify
VITE_APP_VERSION=1.0.0

# Production settings (disable debug features)
VITE_DEBUG_MODE=false
VITE_SHOW_LOGS=false

